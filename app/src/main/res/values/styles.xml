<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:navigationBarColor">@color/colorTransparent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorBackgroundGray</item>
    </style>

    <style name="AppTheme.TextView"
        parent="android:Widget.TextView">
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:textColor">@color/colorText</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.TextView.Italic"
        parent="AppTheme.TextView">
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.TextView.SemiBold"
        parent="AppTheme.TextView">
        <!--        <item name="android:fontFamily">@font/golos_semibold</item>-->
        <!--        <item name="fontFamily">@font/golos_semibold</item>-->
    </style>

    <style name="AppTheme.TextView.Bold"
        parent="AppTheme.TextView">
        <!--        <item name="android:fontFamily">@font/golos_bold</item>-->
        <!--        <item name="fontFamily">@font/golos_bold</item>-->
    </style>

    <style name="AppTheme.TextView.AccentBold"
        parent="AppTheme.TextView.Bold">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView.Tab.Inactive"
        parent="android:Widget.Material.Tab">
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">180dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextView.Tab.Active"
        parent="android:Widget.Material.Tab">
        <!--        <item name="android:fontFamily">@font/golos_bold</item>-->
        <!--        <item name="fontFamily">@font/golos_bold</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">180dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <!--        <item name="android:fontFamily">@font/golos_semibold</item>-->
        <!--        <item name="fontFamily">@font/golos_semibold</item>-->
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.Button.OutlinedButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <!--        <item name="android:fontFamily">@font/golos_bold</item>-->
        <!--        <item name="fontFamily">@font/golos_bold</item>-->
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_rounded</item>
        <item name="android:headerDividersEnabled">true</item>
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="android:titleTextStyle">@style/AppTheme.Dialog.Alert.TitleTextStyle</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme.Dialog.Alert.Transparent" parent="AppTheme.Dialog.Alert">
        <item name="android:windowBackground">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.Dialog.Alert.TitleTextStyle">
        <!--        <item name="android:fontFamily">@font/golos_bold</item>-->
        <!--        <item name="fontFamily">@font/golos_bold</item>-->
    </style>

    <style name="AppTheme.Toolbar"
        parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.Toolbar.Theme</item>
        <item name="android:elevation">0dp</item>
        <item name="popupTheme">@style/AppTheme.PopupToolbar</item>
        <item name="titleMarginBottom">17dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="AppTheme.Toolbar.Theme"
        parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/colorTextWhite</item>
        <item name="android:textColorSecondary">@color/colorTextLight</item>
        <!--        <item name="android:fontFamily">@font/golos_semibold</item>-->
        <!--        <item name="fontFamily">@font/golos_semibold</item>-->
    </style>

    <style name="AppTheme.Toolbar.Title.Expanded"
        parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Toolbar.Title.Collapsed"
        parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Toolbar.Subtitle.Expanded"
        parent="AppTheme.TextView.Bold">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.Toolbar.Subtitle.Collapsed"
        parent="AppTheme.TextView.SemiBold">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.PopupToolbar"
        parent="ThemeOverlay.AppCompat.Light">
        <!--        <item name="android:fontFamily">@font/golos_bold</item>-->
        <!--        <item name="fontFamily">@font/golos_bold</item>-->
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="AppTheme.EditText"
        parent="Base.Widget.AppCompat.EditText">
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="AppTheme.SearchView"
        parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="AppTheme.EditText.Disable"
        parent="AppTheme.EditText">
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="AppTheme.EditText.Disable.NoUnderline"
        parent="AppTheme.EditText.Disable">
        <item name="android:background">@null</item>
        <item name="android:minHeight">46dp</item>
    </style>

    <style name="AppTheme.TextInputLayout"
        parent="Widget.Design.TextInputLayout">
        <!--        <item name="android:fontFamily">@font/golos_semibold</item>-->
        <!--        <item name="fontFamily">@font/golos_semibold</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.TextInputEditText"
        parent="Base.Widget.AppCompat.EditText">
        <!--        <item name="android:fontFamily">@font/golos_regular</item>-->
        <!--        <item name="fontFamily">@font/golos_regular</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomBottomSheetDialog.NoFloat" parent="CustomBottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Switch">
        <item name="android:colorForeground">@color/colorBackgroundDarkGray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Switch.Alternative"
        parent="AppTheme.Switch">
        <item name="colorAccent">@color/colorPink</item>
    </style>

    <style name="AppTheme.Ripple.PrimaryLight"
        parent="ThemeOverlay.AppCompat">
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
    </style>

</resources>
